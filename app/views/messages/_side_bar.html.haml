.side-bar
  .side-bar__user_name
    .top-items
      .top-items__name
        = current_user.name
      .top-items__icons
        = link_to new_group_path do
          = icon('fa', 'edit', class: 'top-items__icons--edit')
        = link_to edit_user_path(current_user) do
          = icon('fa', 'cog', class: 'top-items__icons--cog')
  .side-bar__group_list
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
            = group.show_last_message

