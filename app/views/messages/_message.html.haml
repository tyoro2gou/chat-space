.content{data: {message: {id: message.id}}}
  .content__box
    .content__box--user-name
      = message.user.name
    .time
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .content__message_box
    - if message.content.present?
      %p.content__message_box--text
        = message.content
    = image_tag message.image.url, class: 'content__message_box--image' if message.image.present?